@model DataEditor.Models.crmList
@using DataEditor.Models;
@using PagedList.Mvc;
@{
    ViewBag.Title = "serchCRM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section style{
    <style>
        .page-link {
            position: relative;
            display: block;
            padding: .5rem .75rem;
            margin-left: -1px;
            line-height: 1.25;
            color: #18bc9c;
            background-color: #2c3e50;
            border: 1px solid #2c3e50;
        }

        .page-item.disabled .page-link {
            color: #868e96;
            pointer-events: none;
            cursor: auto;
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

        .page-item.active .page-link {
            z-index: 0;
            color: #fff;
            background-color: #439484;
            border-color: #439484;
        }

        .page-item:last-child .page-link {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-top-left-radius: .25rem;
            border-bottom-left-radius: .25rem;
        }

        .page-item:first-child .page-link {
            margin-left: 0;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            border-top-right-radius: .25rem;
            border-bottom-right-radius: .25rem;
        }

        .pagination {
            text-align: center;
            display: flex;
            justify-content: center;
            width: auto;
        }

        #filter {
            position: relative;
            cursor: pointer;
        }

        #Dfilter {
            position: fixed;
            /*bottom: -60px;*/
            direction: rtl;
            background-color: rgb(44,62,80);
            padding: 10px;
        }

        .ff {
            margin: 0 8px;
        }

        #dcf {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            background-color: #000000c7;
            justify-content: center;
            align-items: center;
            z-index: 6;
        }

        #selectf {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 7;
        }

        #Dfilter {
            position: relative;
            z-index: 8;
        }

        #mainNav {
            z-index: 5;
        }
    </style>
}

<div class="container-lg d-flex justify-content-center align-items-center align-content-center justify-content-xl-center align-items-xl-center div-c" style="/*height: 83%;*/">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-dark">
            <thead>
                <tr>
                    <th >کد ملی</th>
                    <th>شماره</th>
                    <th>نام</th>
                    <th >شناسه</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <td>@item.NationalCode</td>
                        <td>@item.Number</td>
                        <td>@item.Name</td>
                        <td>@item.Id</td>
                    </tr>
                }


            </tbody>

        </table>
        <div id='Paging' style="text-align: center">

            @Html.PagedListPager(Model.list, page => Url.Action("list", new { page, ViewBag.store1, ViewBag.example }))
        </div>
    </div>
</div>
@section footer{style="position:fixed;}
@section scripts{
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script>
        //alert("top:" + $("#filter").outerHeight() + ";")
        $(".pagination").children("li").addClass("page-item");
        $(".pagination").children("li").children("a").addClass("page-link");
        $("#dcf").hide();

    </script>

}

